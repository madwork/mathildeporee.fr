%>

<div id="dessin" class="center-block none">
  <% gallery.each do |image| %>
  <div class="item p5">
    <%= gallery image, "dessin" %>
  </div>
  <% end %>
  <div class="item p5 serie">
    <% link_to "/dessin/mythes", title: "Série Mythes, 2009-2010, stylo, 14x14cm" do %>
      <%= image_tag "dessin/mythes_thumb.jpg", alt: "mythes" %>
      <div class="overlay"><p>Voir la série</p></div>
    <% end %>
  </div>
  <div class="item p5 serie">
    <% link_to "/dessin/herbier", title: "Série Herbier, 2012, aquarelle, 14x14cm" do %>
      <%= image_tag "dessin/herbier_thumb.jpg", alt: "herbier" %>
      <div class="overlay"><p>Voir la série</p></div>
    <% end %>
  </div>
</div>

<div id="spinner">
  <div class="bounce1"></div>
  <div class="bounce2"></div>
  <div class="bounce3"></div>
</div>

<script>
  gallery(document.querySelector('#dessin'), { itemSelector: '.item', gutter: 10, isFitWidth: true });
  $('.gallery').colorbox(colorbox_options);
</script>
